{
    "env": {
        "browser": true,
        "es6": true
    },    
	 "extends": [
        "eslint:recommended",
        "plugin:react/recommended"
    ],		
	"parser": "babel-eslint",
    "parserOptions": {
        "ecmaFeatures": {
		    "jsx": true,
			"modules": true,
            "experimentalObjectRestSpread": true
        },
        "sourceType": "module"
    },
    "plugins": [
        "react"
    ],
    "rules": {
        "indent": [
            "error",
            2
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "quotes": [
            "error",
            "single"
        ],
        "semi": [
            "error",
            "always"
        ],
		"comma-dangle": 0,
        "react/jsx-uses-vars": 1,
        "react/display-name": 1,
        "no-unused-vars": "warn",
        "no-console": 0,
        "no-unexpected-multiline": "warn"
    }
}